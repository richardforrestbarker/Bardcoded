<svg class="loading-progress">
    <circle r="40%" cx="50%" cy="50%" />
    <circle r="40%" cx="50%" cy="50%" />
</svg>
<div class="loading-progress-text">
    @if (ChildContent == null)
    {
        <p>Loading. . .</p>
    }
    else
    {
        @ChildContent
    }
</div>


@code {
    [Parameter] public String Id { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }
}
